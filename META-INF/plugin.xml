<idea-plugin version="2">
    <id>com.millennialmedia.intellibot</id>
    <name>intelliBot</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.millennialmedia.com">TBD</vendor>

    <description><![CDATA[
      <h1>Meet intelliBot the smart Robot.</h1>
      <p>The intelliBot plugin for intellij adds features to the Robot Automation Framework such as:</p>
      <ul>
        <li>Syntax Highlighting</li>
        <li>Code Completion</li>
        <li>Jump to Source</li>
      </ul>
      ]]></description>

    <change-notes><![CDATA[
      <h2>Initial notes</h2>
      ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="107.105"/>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.millennialmedia.intellibot.psi.RobotPsiManager</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="Robot"
                                implementationClass="com.millennialmedia.intellibot.completion.RobotCompletionContributor"/>

        <lang.findUsagesProvider language="Robot"
                                 implementationClass="com.millennialmedia.intellibot.psi.RobotFindUsagesProvider"/>

        <fileTypeFactory implementation="com.millennialmedia.intellibot.psi.RobotFileTypeHandler"/>
        <lang.syntaxHighlighterFactory key="Robot"
                                       implementationClass="com.millennialmedia.intellibot.psi.RobotSyntaxHighlightingFactory"/>
        <lang.commenter language="Robot"
                        implementationClass="com.millennialmedia.intellibot.psi.RobotCommenter"/>
        <!--<lang.foldingBuilder language="Robot"-->
        <!--implementationClass="com.millennialmedia.intellibot.psi.RobotFoldingBuilder"/>-->
        <lang.parserDefinition language="Robot"
                               implementationClass="com.millennialmedia.intellibot.psi.RobotParserDefinition"/>
    </extensions>
</idea-plugin>